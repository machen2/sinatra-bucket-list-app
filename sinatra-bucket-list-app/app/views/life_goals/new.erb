<h1>Create a New Life Goal:</h1>
<hr>
<br>

<div style="color:red;">
  <% if flash.has?(:errors) %>
      <ul>
        <% flash[:errors].each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
      <br>
  <% end %>
</div>

<form action="/life_goals" method="POST">
  <div>
    <label for="title">Title: </label>
    <input type="text" name="life_goal[title]" id="title">
  </div><br>

  <div>
    <label for="location">Location: </label>
    <input type="text" name="life_goal[location]" id="location">
  </div><br>

  <div>
    <label for="summary">Short Summary: </label><br></br>
    <textarea name="life_goal[summary]" id="summary" cols="60" rows="2" placeholder="Maximum 40 Characters"></textarea>
  </div><br>

  <div>
    <label for="description">Detailed Description: </label><br></br>
    <textarea name="life_goal[description]" id="description" cols="60" rows="4"></textarea>
  </div><br>

  <div>
    <input type="submit" value="Create">
  </div>
</form>

<br><br>
<center>Return to my <a href="/life_goals">Bucket List</a></center>
