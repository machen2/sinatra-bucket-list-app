<h1>New User Sign Up:</h1>
<hr><br>

<div style="color:red;">
  <% if flash.has?(:errors) %>
      <ul>
        <% flash[:errors].each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
      <br>
  <% end %>
</div>

<form action='/signup' method="POST">
  Name: <input type="text" name="name" placeholder="your name"><br><br>
  Email: <input type="text" name="email" placeholder="your email address"><br><br>
  Username: <input type="text" name="username" placeholder="username"><br><br>
  Password: <input type="text" name="password" placeholder="password"><br><br>

  <input type="submit" value="Create an Account">
</form>

<br><br>
<center>Already have an account? <a href="/login">Log In</a></center>
